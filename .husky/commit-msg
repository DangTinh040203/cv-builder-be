#!/bin/sh

# Check commit message format (Conventional Commits)
commit_msg=$(cat "$1")

# Regex for conventional commits
pattern="^(feat|fix|docs|style|update|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,100}$"

if ! echo "$commit_msg" | grep -qE "$pattern"; then
  echo ""
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Your message: $commit_msg"
  echo ""
  echo "Expected format: <type>(<scope>): <description>"
  echo ""
  echo "Types: feat, fix, docs, update, style, refactor, test, chore, perf, ci, build, revert"
  echo ""
  echo "Examples:"
  echo "  feat(api-gateway): add user authentication"
  echo "  fix(user-service): resolve login issue"
  echo "  docs(readme): update getting started guide"
  echo ""
  exit 1
fi
