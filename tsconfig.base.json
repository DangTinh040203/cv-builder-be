{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@shared/constants/*": ["shared/constants/src/*"],
      "@shared/configs/*": ["shared/configs/src/*"],
      "@shared/interceptors/*": ["shared/interceptors/src/*"],
      "@shared/middlewares/*": ["shared/middlewares/src/*"],
      "@shared/utils/*": ["shared/utils/src/*"],
      "@shared/types/*": ["shared/types/src/*"],
      "@shared/guards/*": ["shared/guards/src/*"],
      "@shared/decorators/*": ["shared/decorators/src/*"],
      "@shared/pipes/*": ["shared/pipes/src/*"]
    },
    "ignoreDeprecations": "5.0"
  },
  "exclude": ["node_modules", "tmp"]
}
